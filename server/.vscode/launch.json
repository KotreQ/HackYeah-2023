{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (development mode)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "website",
                "FLASK_DEBUG": "1"
            },
            "args": ["run", "--port=8000"],
            "jinja": true
        },
        {
            "name": "Python: Flask (release mode)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "website"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "jinja": true
        }
    ]
}
